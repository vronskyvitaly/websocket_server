// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  userId    String?
  timestamp DateTime @default(now())

  @@map("messages")
}
